<ul class="article-list list-group-flush">
  <% @articles.each do |article|%>
    <li class="article-item" article-id="<%= article.id %>">
      <div class="content">
        <a class="title" target="_blank" href=" <%= "/articles/#{ article.secret_key}"%>"><%= article.title %></a>
        <p class="abstract">
          <%= article.content_format.size > 72 ? "#{article.content_format[0..72]}.." : article.content_format %>
        </p>
      <div class="meta">
      </div>
    </li>
  <% end %>
</ul>
